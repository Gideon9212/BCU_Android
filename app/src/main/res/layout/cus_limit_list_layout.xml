<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.g2.bcu.androidutil.supports.WatcherEditText
            android:id="@+id/cuslim_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/cell_shape"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:paddingEnd="0dp"
            android:paddingBottom="12dp"
            android:text="@string/def_minus"
            android:textColor="?attr/TextPrimary" />

        <Button
            android:id="@+id/cuslim_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/button"
            android:gravity="center"
            android:minHeight="32dip"
            android:text="@string/packcus_limitEdit"
            android:textAllCaps="false"
            android:textColor="?attr/TextPrimary" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/cuslim_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:tint="@color/iconPrimaryN"
            app:backgroundTint="@color/colorAccent"
            app:srcCompat="@drawable/ic_baseline_delete_24" />
    </TableRow>

</androidx.constraintlayout.widget.ConstraintLayout>
