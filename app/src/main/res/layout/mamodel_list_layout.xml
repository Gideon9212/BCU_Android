<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/mamodel_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="@drawable/cell_shape"
            android:gravity="center"
            android:textColor="?attr/TextPrimary"
            android:textSize="12sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/mamodel_par"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="@drawable/cell_shape"
            android:ems="10"
            android:inputType="numberSigned" />

        <EditText
            android:id="@+id/mamodel_spr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="@drawable/cell_shape"
            android:ems="10"
            android:inputType="number" />

        <EditText
            android:id="@+id/mamodel_z"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="@drawable/cell_shape"
            android:ems="10"
            android:inputType="numberSigned" />

        <EditText
            android:id="@+id/mamodel_x"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="@drawable/cell_shape"
            android:ems="10"
            android:inputType="numberSigned" />

        <EditText
            android:id="@+id/mamodel_y"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="@drawable/cell_shape"
            android:ems="10"
            android:inputType="numberSigned" />

        <EditText
            android:id="@+id/mamodel_px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="@drawable/cell_shape"
            android:ems="10"
            android:inputType="numberSigned" />

        <EditText
            android:id="@+id/mamodel_py"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="@drawable/cell_shape"
            android:ems="10"
            android:inputType="numberSigned" />

        <EditText
            android:id="@+id/mamodel_sx"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="@drawable/cell_shape"
            android:ems="10"
            android:inputType="numberSigned" />

        <EditText
            android:id="@+id/mamodel_sy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="@drawable/cell_shape"
            android:ems="10"
            android:inputType="numberSigned" />

        <EditText
            android:id="@+id/mamodel_rot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="@drawable/cell_shape"
            android:ems="10"
            android:inputType="numberSigned" />

        <EditText
            android:id="@+id/mamodel_opa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="@drawable/cell_shape"
            android:ems="10"
            android:inputType="number" />

        <Spinner
            android:id="@+id/mamodel_glw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="@drawable/cell_spinner"
            android:ems="10" />

        <EditText
            android:id="@+id/mamodel_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="@drawable/cell_shape"
            android:ems="10"
            android:hint="@string/stg_sch_name"
            android:inputType="text" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/mamodel_part_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:tint="@color/iconPrimaryN"
            app:backgroundTint="@color/colorAccent"
            app:srcCompat="@drawable/ic_baseline_delete_24" />

    </TableRow>
</androidx.constraintlayout.widget.ConstraintLayout>
